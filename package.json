{
  "name": "node-torrent",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "transpile": "babel ./server --out-dir dist-server && cp ./server/tokens.json ./dist-server/",
    "client:dev": "vue-cli-service build --watch",
    "client:build": "vue-cli-service build",
    "clean": "rimraf dist-server",
    "start": "node ./dist-server/index.js",
    "build": "npm run server:build && vue-cli-service build",
    "kill": "kill $(lsof -t -i:3030) | exit 0",
    "dev": "npm run vue:dev & npm run watch:dev",
    "server:build": "npm run clean && npm run transpile",
    "server:dev": "nodemon",
    "serve": "vue-cli-service serve --port 3030",
    "crawl": "NODE_ENV=dev&& npm run transpile && node ./dist-server/torrent-crawling/piratebay.js"
  },
  "nodemonConfig": {
    "exec": "npm run kill && npm run server:build && npm run start",
    "watch": [
      "server/*"
    ],
    "env": {
      "NODE_ENV": "dev"
    },
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "dependencies": {
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "cheerio": "^1.0.0-rc.5",
    "cors": "^2.8.5",
    "date-fns": "^2.16.1",
    "directory-tree": "^2.2.5",
    "express": "^4.17.1",
    "playwright": "^1.7.1",
    "primeicons": "^4.1.0",
    "primevue": "^3.0.2",
    "rimraf": "^2.7.1",
    "rxjs": "^6.6.3",
    "socket.io": "^3.0.3",
    "socket.io-client": "^3.0.3",
    "uuid": "^3.4.0",
    "vue": "^3.0.0",
    "vue-router": "^4.0.0-0",
    "vuex": "^4.0.0-0",
    "webtorrent": "^0.112.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.8",
    "@babel/core": "^7.12.9",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.7",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-plugin-router": "~4.5.0",
    "@vue/cli-plugin-vuex": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "@vue/compiler-sfc": "^3.0.0",
    "autoprefixer": "^9.8.6",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^7.0.0-0",
    "nodemon": "^2.0.6",
    "postcss": "^7.0.35",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.0.1"
  }
}
